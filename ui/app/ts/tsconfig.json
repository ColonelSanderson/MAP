{
    "compilerOptions": {
        // this aligns with Vue's browser support
        "target": "es2015",
        // this enables stricter inference for data properties on `this`
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,

        "esModuleInterop": true,
        "module": "amd",
        "moduleResolution": "node",

        "sourceMap": true,
        "outDir": "../buildjs",
    },
    "include": [
        "types/global.d.ts",
        "*.ts",
    ]
}
